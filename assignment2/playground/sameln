FILES="$1/*"

for f in $FILES
do
	if [[ -f "$f" ]] ; then
	switch=1

	for g in $FILES
	do
		if [[ "$switch" == "0" ]]
		then
			if cmp -s "$f" "$g"
			then
				#MATCH FOUND
				#TIME TO TURN STUFF INTO LINKS
				rm $g
				ln $f $g
			fi 

		fi


		if [[ "$f" == "$g" ]]
		then
			switch=0
		fi
	done	
	fi
done
